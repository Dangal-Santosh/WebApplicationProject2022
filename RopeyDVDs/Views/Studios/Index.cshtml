@model IEnumerable<RopeysDVD.Models.Studio>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-danger">All Studios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary ms-lg-2">New Studio</a>
</p>
<table class="table table-hover table-striped  text-center">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudioName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="px-3 table-secondary">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudioName)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-secondary" asp-route-id="@item.StudioNumber">Edit</a> 
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.StudioNumber">Details</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.StudioNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
