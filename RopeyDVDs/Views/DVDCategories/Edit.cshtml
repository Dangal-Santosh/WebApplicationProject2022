@model RopeysDVD.Models.DVDCategory

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-danger text-center fw-bold">New DVDCategory</h2>

<hr />
<div class="w-50 m-auto bg-secondary" style="padding: 20px 15px; border-radius: 5px ;">

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mx-1">
                <label asp-for="CategoryDescription" class="control-label fw-bold text-white"></label>
                <input asp-for="CategoryDescription" class="form-control bg-lignt" />
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group form-check ">
                <label class="form-check-label fw-bold text-white">
                    <input class="form-check-input" asp-for="AgeRestricted" /> @Html.DisplayNameFor(model => model.AgeRestricted)
                </label>
            </div>
            <div class="form-group my-1">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class=" btn btn-info ms-lg-1">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
