@model IEnumerable<RopeysDVD.Models.DVDCategory>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-danger">All DVDCategories</h1>

<p>
     <a asp-action="Create" class="btn btn-primary ms-lg-2">New DVDCategory</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeRestricted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="px-3 table-secondary">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeRestricted)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.CategoryNumber">Edit</a> 
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.CategoryNumber">Details</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CategoryNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
