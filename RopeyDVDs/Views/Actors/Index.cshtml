@model IEnumerable<RopeysDVD.Models.Actor>

@{
    ViewData["Title"] = "Index";
}
<h1 class="text-center text-danger">All Actors</h1>
<hr/>

<p>
    <a asp-action="Create" class="btn btn-primary ms-lg-2">New Actor</a>
</p>
<table class="table table-hover table-striped  text-center">
    <thead class="table-dark">
        <tr>
            <th >
                @Html.DisplayNameFor(model => model.ActorFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActorSurname)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="px-3 table-secondary">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActorFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActorSurname)
            </td>
            <td>
                <a asp-action="Edit"class="btn btn-secondary" asp-route-id="@item.ActorNumber">Edit</a> 
                <a asp-action="Details"class="btn btn-info" asp-route-id="@item.ActorNumber">Details</a> 
                <a asp-action="Delete"class="btn btn-danger" asp-route-id="@item.ActorNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

