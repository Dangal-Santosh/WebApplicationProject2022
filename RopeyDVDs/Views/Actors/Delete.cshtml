@model RopeysDVD.Models.Actor

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-bold text-center text-Dark">Delete Actor</h1>

<h3 class="text-danger text-center">Are you sure you want to delete this?</h3>
<div class="w-50 m-auto bg-secondary" style="padding: 20px 15px; border-radius: 5px"> 
        @*<h4 class="text-bold">Actor</h4>*@
        <hr />
        <dl class="row bg-secondary">
        <dt class = "col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.ActorFirstName)
        </dt>
        <dd class = "col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.ActorFirstName)
        </dd>
        <dt class = "col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.ActorSurname)
        </dt>
        <dd class = "col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.ActorSurname)
        </dd>
    </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ActorNumber" />
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </form>
</div>
