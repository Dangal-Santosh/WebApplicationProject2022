@model RopeyDVDs.Models.DVDCopy

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-danger text-center fw-bold">Edit DVDCopy</h2>
<div class="w-50 m-auto bg-secondary" style="padding: 20px 15px; border-radius: 5px ;">
    <h4>DVDCopy</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CopyNumber" />
                <div class="form-group mx-1">
                    <label asp-for="DVDNumber" class="control-label fw-bold text-white"></label>
                    <select asp-for="DVDNumber" class="form-control bg-light" asp-items="ViewBag.DVDNumber"></select>
                    <span asp-validation-for="DVDNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 my-1">
                    <label asp-for="DatePurchased" class="control-label fw-bold text-white"></label>
                    <input asp-for="DatePurchased" class="form-control bg-light" />
                    <span asp-validation-for="DatePurchased" class="text-danger"></span>
                </div>
                <div class="form-group my-1">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class=" btn btn-info ms-lg-1">Back to List</a>
                </div>
            </form>
        </div>
    </div>
    </div>

    
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
