@model RopeyDVDs.Models.Member

@{
    ViewData["Title"] = "Create";
}
<h2 class="text-danger text-center fw-bold"> New Member</h2>

<hr />
<div class="w-50 m-auto bg-secondary" style="padding: 20px 15px; border-radius: 5px ;">
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mx-1">
                <label asp-for="MemberFirstName" class="control-label fw-bold text-white"></label>
                <input asp-for="MemberFirstName" class="form-control bg-light" />
                <span asp-validation-for="MemberFirstName" class="text-danger"></span>
            </div>
            <div class="form-group mx-1">
                <label asp-for="MemberLastName" class="control-label fw-bold text-white"></label>
                <input asp-for="MemberLastName" class="form-control bg-light" />
                <span asp-validation-for="MemberLastName" class="text-danger"></span>
            </div>
            <div class="form-group mx-1">
                <label asp-for="MemberAddress" class="control-label fw-bold text-white"></label>
                <input asp-for="MemberAddress" class="form-control bg-light" />
                <span asp-validation-for="MemberAddress" class="text-danger"></span>
            </div>
            <div class="form-group mx-1">
                <label asp-for="MemberDateOfBirth" class="control-label fw-bold text-white"></label>
                <input asp-for="MemberDateOfBirth" class="form-control bg-light" />
                <span asp-validation-for="MemberDateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group mx-1">
                <label asp-for="MembershipCategoryNumber" class="control-label fw-bold text-white"></label>
                <select asp-for="MembershipCategoryNumber" class ="form-control bg-light" asp-items="ViewBag.MembershipCategoryNumber"></select>
            </div>
            <div class="form-group my-1">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class=" btn btn-info ms-lg-1">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
