@model RopeyDVDs.Models.Member

@{
    ViewData["Title"] = "Details";
}

<h4 class="text-danger fw-bold text-center">Member Details</h4>

<div class="w-50 m-auto bg-secondary" style="padding: 20px 15px; border-radius: 5px">
    <hr />
    <dl class="row bg-secondary">
        <dt class = "col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.MemberFirstName)
        </dt>
        <dd class = "col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.MemberFirstName)
        </dd>
        <dt class = "col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.MemberLastName)
        </dt>
        <dd class = "col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.MemberLastName)
        </dd>
        <dt class = "col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.MemberAddress)
        </dt>
        <dd class = "col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.MemberAddress)
        </dd>
        <dt class = "col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.MemberDateOfBirth)
        </dt>
        <dd class = "col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.MemberDateOfBirth)
        </dd>
        <dt class = "col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.MembershipCategory)
        </dt>
        <dd class = "col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.MembershipCategory.MembershipCategoryDescription)
