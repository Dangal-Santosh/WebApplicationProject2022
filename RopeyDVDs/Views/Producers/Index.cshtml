@model IEnumerable<RopeysDVD.Models.Producer>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-danger">All Producers</h1>


<p>
        <a asp-action="Create" class="btn btn-primary ms-lg-2">New Producer</a>

</p>
<table class="table table-hover table-striped  text-center">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProducerName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="px-3 table-secondary">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerName)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-secondary" asp-route-id="@item.ProducerNumber">Edit</a> 
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ProducerNumber">Details</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ProducerNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
