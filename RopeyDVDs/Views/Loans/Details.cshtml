@model RopeyDVDs.Models.Loan

@{
    ViewData["Title"] = "Details";
}

<h4 class="text-danger fw-bold text-center"> Loan Details</h4>

<div class="w-50 m-auto bg-secondary" style="padding: 20px 15px; border-radius: 5px">
    <h4>Loan</h4>
    <hr />
    <dl class="row bg-secondary">
        <dt class="col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.DateOut)
        </dt>
        <dd class="col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.DateOut)
        </dd>
        <dt class="col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.DateDue)
        </dt>
        <dd class="col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.DateDue)
        </dd>
        <dt class="col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.ReturnedDate)
        </dt>
        <dd class="col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.ReturnedDate)
        </dd>
        <dt class="col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.LoanType)
        </dt>
        <dd class="col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.LoanType.LoanDuration)
        </dd>
        <dt class="col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.DVDCopy)
        </dt>
        <dd class="col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.DVDCopy.CopyNumber)
