@model RopeyDVDs.Models.CastMember

@{
    ViewData["Title"] = "Delete";
}

<h1  class="text-bold text-center text-Dark">Delete CastMember</h1>

<h3 class="text-danger text-center">Are you sure you want to delete this?</h3>
<div class="w-50 m-auto bg-secondary" style="padding: 20px 15px; border-radius: 5px">
    <hr />
    <dl class="row bg-secondary">
        <dt class = "col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.DVDTitle) 
        </dt>
        <dd class = "col-sm-2 text-center text-white ml-4">
            @Html.DisplayFor(model => model.DVDTitle.TitleName)
        </dd>
        <dt class = "col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.Actor)
        </dt>
        <dd class = "col-sm-2 text-center text-white ml-4">
            @Html.DisplayFor(model => model.Actor.ActorFirstName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a  class="btn btn-info" asp-action="Index">Back to List</a>
    </form>
</div>
