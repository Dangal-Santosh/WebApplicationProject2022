@model RopeyDVDs.Models.CastMember

@{
    ViewData["Title"] = "Create";
}

<h1  class="text-danger text-center fw-bold">New CastMember</h1>

<hr />
<div class="w-50 row m-auto bg-secondary mb-5" style="padding: 20px 15px; border-radius: 5px">
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ActorNumber" class="control-label"></label>
                <select asp-for="ActorNumber" class="form-control" asp-items="ViewBag.ActorNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="DVDNumber" class="control-label"></label>
                <select asp-for="DVDNumber" class="form-control" asp-items="ViewBag.DVDNumber"></select>
            </div>
            <div class="form-group my-1">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class=" btn btn-info ms-lg-1">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
