        <dd class="col-sm-10 text-center text-white ml-4">
            @Html.DisplayFor(model => model.TitleName)
        </dd>
        <dt class="col-sm-2 text-center text-white ml-4">
            @Html.DisplayNameFor(model => model.DateReleased)
