@model System.Collections.Generic.List<RopeyDVDs.Models.DVDTitle>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1 class="text-center text-danger">All DVDTitles</h1>
<p>
    <a asp-action="Create" class="btn btn-primary ms-lg-2">New DVDTitle</a>
</p>
<table class="table table-hover table-striped  text-center">
    <thead class="table-dark">
    <tr>
        <th>DVD Title</th>
        <th>Studio Name</th>
        <th>Producer Name</th>
        @*<th>Studio Name</th>*@
        <th>Release Date</th>
        <th>Action</th>
    </tr>
    </thead>
    
    <tbody class="px-3 table-secondary">
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TitleName</td>
            <td>@item.Studio.StudioName</td>
            <td>@item.Producer.ProducerName</td>
            @*<td>@item.actors</td>*@
            <td>@item.DateReleased</td>
            <td>
                <a  asp-action="Edit" class="btn btn-secondary"  asp-route-id="@item.DVDNumber">Edit</a>
                <a  asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.DVDNumber">Delete</a>
                <a asp-action="Details"  class="btn btn-info" asp-route-id="@item.DVDNumber">Details</a> 

            </td>
        </tr>
    }
    </tbody>
</table>