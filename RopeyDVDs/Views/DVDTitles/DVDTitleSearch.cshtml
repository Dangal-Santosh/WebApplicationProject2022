@{
}

@model List<CastMember>

@{
    ViewBag.Title = "Search DVD";
    Layout = "_Layout";
}

<h1 class="text-center text-danger">Search DVD by Actor LastName</h1>

@using (Html.BeginForm())
{
    <p>
        <input type="search" name="surname">
        <button class="btn btn-info" type="submit">Submit</button>
    </p>
}

<table class="table table-hover table-striped  text-center">
    <thead class="table-dark">
    <tr>
        <th>Actor First Name</th>
        <th>Actor Last Name</th>
        <th>DVD Title</th>
    </tr>
    </thead>
    <tbody class="px-3 table-secondary">
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Actor.ActorFirstName</td>
            <td>@item.Actor.ActorSurname</td>
            <td>@item.DVDTitle.TitleName</td>
        </tr>
    }
    <tr>

    </tr>
    </tbody>
</table>
