@model IEnumerable<RopeyDVDs.Models.MembershipCategory>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-danger">All MembershipCategories</h1>

<p>
    <a asp-action="Create" class="btn btn-primary ms-lg-2">New MembershipCategory</a>
</p>
<table class="table table-hover table-striped  text-center">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MembershipCategoryDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalLoans)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="px-3 table-secondary">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipCategoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalLoans)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-secondary" asp-route-id="@item.MembershipCategoryNumber">Edit</a> 
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.MembershipCategoryNumber">Details</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.MembershipCategoryNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

